---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取所有文章并按日期倒序排列
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="档案馆 | Archives">
	<main class="pt-32 px-4 md:px-20 max-w-5xl mx-auto min-h-screen">
        <h1 class="text-4xl font-black mb-12 text-center">
            <span class="text-acg-blue">学习笔记</span> // ARCHIVE
        </h1>

        <!-- 时间轴容器 -->
        <div class="relative border-l-2 border-white/20 ml-4 md:ml-10 space-y-12">
            
            {posts.map((post) => (
                <div class="relative pl-8 md:pl-12 group">
                    <!-- 时间轴上的发光点 -->
                    <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-slate-500 border-4 border-slate-900 
                                group-hover:bg-acg-pink group-hover:shadow-[0_0_10px_#ff0055] transition-all duration-300"></div>
                    
                    <!-- 文章卡片 -->
                    <a href={`/blog/${post.slug}/`} class="block glass-panel p-6 rounded-xl hover:scale-[1.01] transition-transform">
                        <div class="flex flex-col md:flex-row gap-6">
                            <!-- 左侧：封面缩略图 -->
                            {post.data.heroImage && (
                                <div class="w-full md:w-48 h-32 rounded-lg overflow-hidden shrink-0">
                                    <img src={post.data.heroImage} alt="" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                                </div>
                            )}
                            
                            <!-- 右侧：文字 -->
                            <div class="flex-1">
                                <div class="text-xs font-mono text-acg-pink mb-1">
                                    {post.data.pubDate.toLocaleDateString('zh-CN')}
                                </div>
                                <h2 class="text-2xl font-bold mb-2 group-hover:text-acg-blue transition-colors">
                                    {post.data.title}
                                </h2>
                                <p class="opacity-70 line-clamp-2">
                                    {post.data.description}
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            ))}

        </div>
	</main>
</Layout>